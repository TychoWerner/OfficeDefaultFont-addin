
<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides"
           xsi:type="MailApp">

  <Id>2f1b10b6-7b2f-4f2d-9a20-9b9a5a7f2c31</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Tycho Services</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Comic Sans by default"/>
  <Description DefaultValue="Applies Comic Sans in new Outlook messages via event-based activation."/>
  <IconUrl DefaultValue="https://raw.githubusercontent.com/TychoWerner/OfficeDefaultFont-addin/refs/heads/main/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://raw.githubusercontent.com/TychoWerner/OfficeDefaultFont-addin/refs/heads/main/icon-64.png"/>
  <SupportUrl DefaultValue="https://tychowerner.nl/help"/>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.10"/>
    </Sets>
  </Requirements>

  <Permissions>ReadWriteItem</Permissions>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1"
                    xsi:type="VersionOverridesV1_1">

    <Requirements>
      <bt:Sets DefaultMinVersion="1.10">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>

    <Hosts>
      <Host xsi:type="MailHost">
        <Runtimes>
          <Runtime resid="Runtime.Page.Url" lifetime="long">
            <Override type="javascript" resid="Runtime.Script.Url"/>
          </Runtime>
        </Runtimes>

        <ExtensionPoint xsi:type="LaunchEvent">
          <LaunchEvents>
            <LaunchEvent Type="OnNewMessageCompose" FunctionName="onNewMessageCompose"/>
          </LaunchEvents>
          <SourceLocation resid="Runtime.Page.Url"/>
        </ExtensionPoint>
      </Host>
    </Hosts>

    <Resources>
      <bt:Urls>
        <bt:Url id="Runtime.Page.Url" DefaultValue="https://raw.githubusercontent.com/TychoWerner/OfficeDefaultFont-addin/refs/heads/main/autorun.html"/>
        <bt:Url id="Runtime.Script.Url" DefaultValue="https://raw.githubusercontent.com/TychoWerner/OfficeDefaultFont-addin/refs/heads/main/launchevent.js"/>
      </bt:Urls>
      <bt:Images>
        <bt:Image id="Icon32" DefaultValue="https://raw.githubusercontent.com/TychoWerner/OfficeDefaultFont-addin/refs/heads/main/icon-32.png"/>
        <bt:Image id="Icon64" DefaultValue="https://raw.githubusercontent.com/TychoWerner/OfficeDefaultFont-addin/refs/heads/main/icon-64.png"/>
      </bt:Images>
      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="Comic Sans Add-in"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="GroupDescription" DefaultValue="Applies Comic Sans on new message compose."/>
      </bt:LongStrings>
    </Resources>

  </VersionOverrides  </VersionOverrides>
